# Database Configuration
DATABASE_URL="file:./dev.db"  # SQLite for development
# DATABASE_URL="postgresql://user:password@localhost:5432/adonis_health?sslmode=require"  # PostgreSQL for production

# JWT Authentication (HIPAA Critical)
JWT_SECRET="CHANGE_THIS_TO_SECURE_RANDOM_256_BIT_STRING"  # MUST be changed in production
JWT_EXPIRATION="60m"  # Token expiration time

# Server Configuration
PORT=3001
NODE_ENV="development"

# CORS Configuration
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# Rate Limiting (DDoS Protection)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW="15m"

# AWS S3 Configuration (Production)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
S3_BUCKET="adonis-health-labs"
S3_ENCRYPTION="AES256"
STORAGE_PROVIDER="local"  # "local" for dev, "s3" for production

# AI Services (Requires BAA)
ANTHROPIC_API_KEY=""

# Redis (For job queues and caching)
REDIS_URL="redis://localhost:6379"

# Audit Logging
AUDIT_LOG_RETENTION_DAYS=2190  # 6 years (HIPAA requirement)

# Security Headers
HELMET_ENABLED="true"
HSTS_MAX_AGE=31536000

# Session Configuration
SESSION_TIMEOUT_MINUTES=60
MAX_CONCURRENT_SESSIONS=3

# Password Policy
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_EXPIRATION_DAYS=90
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30
